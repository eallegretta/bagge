<?xml version="1.0" encoding="utf-8" ?>
<objects xmlns="http://www.springframework.net">

	<!-- Managers -->
	<object id="CountryStateManager" type="Bagge.Seti.BusinessLogic.GenericManager&lt;CountryState, int>, Bagge.Seti.BusinessLogic">
		<constructor-arg>
			<object type="CountryStateDao"/>
		</constructor-arg>
	</object>

	<object id="DistrictManager" type="Bagge.Seti.BusinessLogic.GenericManager&lt;District, int>, Bagge.Seti.BusinessLogic">
		<constructor-arg>
			<object type="DistrictDao"/>
		</constructor-arg>
	</object>
	
	<object id="CustomerManager" type="Spring.Aop.Framework.ProxyFactoryObject">
		<property name="Target">
			<object type="Bagge.Seti.BusinessLogic.CustomerManager, Bagge.Seti.BusinessLogic">
				<constructor-arg>
					<object type="CustomerDao"/>
				</constructor-arg>
			</object>
		</property>
		<property name="InterceptorNames">
			<list>
				<value>SecurityInterceptor</value>
				<value>AuditInterceptor</value>
				<value>ValidationInterceptor</value>
			</list>
		</property>
	</object>

	<object id="EmployeeManager" type="Spring.Aop.Framework.ProxyFactoryObject">
		<property name="Target">
			<object type="Bagge.Seti.BusinessLogic.EmployeeManager, Bagge.Seti.BusinessLogic">
				<constructor-arg>
					<object type="EmployeeDao"/>
				</constructor-arg>
			</object>
		</property>
		<property name="InterceptorNames">
			<list>
				<value>SecurityInterceptor</value>
				<value>AuditInterceptor</value>
			</list>
		</property>
	</object>

	
	
	

	<object id="ValidationEngine" type="Bagge.Seti.Common.Validation.CastleValidationEngine">
		<constructor-arg>
			<object id="CastleValidatorRunner" type="Castle.Components.Validator.ValidatorRunner">
				<constructor-arg>
					<object  type="Castle.Components.Validator.CachedValidationRegistry, Castle.Components.Validator"></object>
				</constructor-arg>
			</object>
		</constructor-arg>
	</object>
	
	<!-- Interceptors -->
	<object id="SecurityInterceptor" type="Bagge.Seti.Common.Interceptors.SecurityInterceptor, Bagge.Seti.Common" />
	<object id="AuditInterceptor" type="Bagge.Seti.Common.Interceptors.AuditInterceptor, Bagge.Seti.Common" />
	<object id="ValidationInterceptor" type="Bagge.Seti.Common.Interceptors.ValidationInterceptor, Bagge.Seti.Common" />
</objects>